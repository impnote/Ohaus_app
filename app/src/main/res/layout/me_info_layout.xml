<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            tools:text="dsa"
            android:id="@+id/me_info_title"
            android:layout_marginLeft="@dimen/me_left_margin"
            android:layout_marginStart="@dimen/me_left_margin"
            android:gravity="center"
            android:textSize="@dimen/me_info_list_text_size"
            android:textColor="@color/me_info_list_text_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:src="@drawable/forward_arrow_gray"
            android:id="@+id/user_image_back_arrow"
            android:layout_marginRight="@dimen/me_right_margin"
            android:layout_marginEnd="@dimen/me_right_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            tools:text="dad"
            android:id="@+id/me_info_value"
            android:gravity="center|right"
            android:textSize="@dimen/me_info_list_text_size"
            android:textColor="@color/me_info_list_text_color"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp"
            android:layout_toLeftOf="@id/user_image_back_arrow"
            android:layout_toStartOf="@id/user_image_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:visibility="gone"
            android:layout_marginLeft="@dimen/me_left_margin"
            android:layout_marginStart="@dimen/me_left_margin"
            android:background="#e2e2e2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
</LinearLayout>