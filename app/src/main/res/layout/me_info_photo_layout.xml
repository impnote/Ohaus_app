<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/me_info_photo_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/me_left_margin"
        android:layout_marginStart="@dimen/me_left_margin"
        android:gravity="center"
        android:text="@string/me_photo_title"/>

    <ImageView
        android:id="@+id/user_image_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/me_right_margin"
        android:layout_marginRight="@dimen/me_right_margin"
        android:src="@drawable/forward_arrow_gray"/>

    <ImageView
        android:id="@+id/me_info_photo"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_toLeftOf="@id/user_image_back_arrow"
        android:layout_toStartOf="@id/user_image_back_arrow"
        android:background="@mipmap/ic_launcher"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/me_left_margin"
        android:layout_marginStart="@dimen/me_left_margin"
        android:background="@color/common_divider_background_color"/>
</RelativeLayout>
